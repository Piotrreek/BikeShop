@using Microsoft.AspNetCore.Identity
@using BikeShop.Entities
@inject SignInManager<User> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <div class="nav-item-anchor">My Account</div>
    </li>
    
    <li class="nav-item">
        <form method="post" asp-controller="Account" asp-action="SignOut">
            <button class="nav-item-anchor nav-item sign-out-btn" type="submit">Sign Out</button>
        </form>
    </li>
}
else
{
    <li class="nav-item"><a class="nav-item-anchor" asp-controller="Account" asp-action="Register">Register</a></li>
    <li class="nav-item"><a class="nav-item-anchor" asp-controller="Account" asp-action="Login">Sign in</a></li>
}