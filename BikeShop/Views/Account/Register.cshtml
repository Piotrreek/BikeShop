@model UserViewModel

@{
    ViewData["Title"] = "Register";
}

<h1 class="page-info">Register</h1>
<div class="form">
    <form asp-controller="Account" asp-action="Register" method="post">
        
        <div class="validation-summary" asp-validation-summary="ModelOnly"></div>
        
        <div class="form-group">
            <div class="form-group-desc">
                <div>
                    <label asp-for="FirstName">First Name:</label>
                </div>
                <span asp-validation-for="FirstName"></span>
            </div>

            <input class="form-field" asp-for="FirstName" placeholder="First Name"/>
        </div>

        <div class="form-group">
            <div class="form-group-desc">
                <div>
                    <label asp-for="LastName">Last Name:</label>
                </div>
                <span asp-validation-for="LastName"></span>
            </div>
            <input class="form-field" asp-for="LastName" placeholder="Last Name"/>
        </div>
        
        <div class="form-group">
            <div class="form-group-desc">
                <div>
                    <label asp-for="UserName">User Name:</label>
                </div>
                <span asp-validation-for="UserName"></span>
            </div>
        
            <input class="form-field" asp-for="UserName" placeholder="User Name"/>
        </div>

        <div class="form-group">
            <div class="form-group-desc">
                <div>
                    <label asp-for="Email">E-mail:</label>
                </div>
                <span asp-validation-for="Email"></span>
            </div>
            <input class="form-field" asp-for="Email" placeholder="test@gmail.com"/>
        </div>

        <div class="form-group">
            <div class="form-group-desc">
                <div>
                    <label asp-for="Password">Password:</label>
                </div>
                <span asp-validation-for="Password"></span>
            </div>
            <input type="password" class="form-field" asp-for="Password" placeholder="Password"/>
        </div>

        <div class="form-group">
            <div class="form-group-desc">
                <div>
                    <label asp-for="ConfirmPassword">Confirm Password:</label>
                </div>
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
            <input type="password" class="form-field" asp-for="ConfirmPassword" placeholder="Confirm Password"/>
        </div>

        <div class="form-group">
            <input type="submit" value="Register" class="form-field btn"/>
        </div>
    </form>
    <br/><hr/><br/>
    
    <div class="form-group login-info">
        <p>Already registered?</p>
        <a class="login-btn" asp-controller="Account" asp-action="Login">Login</a>
    </div>
</div>
